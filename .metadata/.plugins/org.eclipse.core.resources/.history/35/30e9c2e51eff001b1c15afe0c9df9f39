	$.ajax({
		url : base + "/bakeshackAPI/api/getOrderCode",
		type : "post",
		dataType : "text",
		async : false,
		success:function(data)
        {
			$('#order_code').val(data);   
        }
	});	
	

	
	
	
	
	 $('#upi_div').hide();
	 $('#nb_div').hide();
	 $('#cheque_div').hide();
	 $('#bank').hide();
	 
	 
	 $('#paymentMode').change(function(){
			var payment_mode = $(this).val();
			
			//$('#amount_div').show();
			
			if(payment_mode == 'upi'){
				$('#upi_div').show();
				$('#nb_div').hide();
				$('#cheque_div').hide();
			}else if(payment_mode == 'nb'){
				$('#upi_div').hide();
				$('#nb_div').show();
			    $('#cheque_div').hide();
			}else if(payment_mode == 'cheque'){
				$('#upi_div').hide();
				$('#nb_div').hide();
				$('#cheque_div').show();
				$('#bank').show();
			}else{
				$('#upi_div').hide();
				$('#nb_div').hide();
				$('#cheque_div').hide();
			}
			
		});

	
	$("#add_Customer").show();

	$('#add_Customer').click(
			function() {

				var customer_name = $('#customer_name').val();
				var mobile_no = $('#mobile_no').val();
				var flag = 1; // Addition
				
				
				console.log(customer_name);
				if(customer_id != '' || customer_id != null ){

					$.ajax({
								url : base
										+ "/bakeshackAPI/api/insertUpdateCustomer",
								type : "post",
								dataType : "json",
								async : false,
								data : {
									"customer_name" : customer_name,
									"mobile_no" : mobile_no,
									"flag" : flag
								},
								error : function(xhr) {
									var msg = "(insertUpdateCustomer)Sorry but there was an error : "
											+ xhr.status
											+ " "
											+ xhr.statusText;
									alert(msg);
								},
								success : function(response) {
									if (response != null) {

										if (response >= 1) {

											var msg = "Customer Data inserted Successfully.";
											alert(msg);
											

										}													
									}
								}

							});
					
					$.ajax({
						url : base + "/bakeshackAPI/api/getCustomerDetails",
						type : "post",
						dataType : "json",
						async : false,
						data : {
							"flag" : 1
						},
						success : function(data) {
						 
							
						}
					});

					
				}

				 
			})
			


"use strict";
	
	 var cName = [];
		
		$.ajax({
			url : base + "/bakeshackAPI/api/getCustomerDetails",
			type : "post",
			dataType : "json",
			async : false,
			data : {
				"flag" : 1
			},
			success : function(data) {
				if (data != null) {
					data.forEach(function(e) {
						cName.push(e.customer_name);
						//cName.push(e.customer_name + " - " + e.mobile_no);
					})
				}
			}
		});
     
         $('#customer_name').change(function(){
			
			var mobile_no = $('#mobile_no').val();
			//var customer_id = $("#customer_id").val();
			console.log(mobile_no);
			//console.log(customer_id);
			
			var customer_name = $(this).val();
				
			$.ajax({
				url : base + "/bakeshackAPI/api/getCustomerDetails",
				type : "post",
				dataType : "json",
				async : false,
				data : {"flag":1,},
				success:function(data)
		        {
					
					const row = data.find(d => d.customer_name == customer_name);
					
					console.log(row);
					
					if(row != null){
						$('#mobile_no').val(row.mobile_no);
						
					}else{
						$('#mobile_no').val("");
					}

		        }
			});	
		})
		
		$.urlParam = function(name){
 			var results = new RegExp('[\?&]' + name + '=([^&#]*)').exec(window.location.href);
 			return results != null ? results[1] || 0 : 0;
 		}
 				     
 		var query = $.urlParam('mobile_no');

 		console.log("data " + query);

 		if(query != '' && query != null){	
 			
 					
 			$.ajax({
 				url : base + "/bakeshackAPI/api/getCustomerDetails",
 				type : "post",
 				dataType : "json",
 				async : false,
 				data : {"flag":1,},
 				success:function(data)
 		        {
 					
 					const row = data.find(d => d.customer_name == query ||  d.mobile_no == query);
 					
 					console.log(row);
 					
 					if(row != null){
 						//$('customer_id').val(row.customer_id);
 						$('#mobile_no').val(row.mobile_no);
 						$('#customer_name').val(row.customer_name);
 						
 					}else{
 						$('#mobile_code').val("");
 						//$('#customer_id').val("");
 					}

 		        }
 			});	
 		}	

