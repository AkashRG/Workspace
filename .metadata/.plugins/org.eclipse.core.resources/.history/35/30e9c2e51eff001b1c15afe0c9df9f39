	$('#productName').change(function(){
		
		var product_name = $('#productName').val();
		
		
		$.ajax({
			url : base + "/bakeshackAPI/api/getProductDetails",
			type : "post",
			dataType : "json",
			async : false,
			data : {"flag":1},
			success:function(data)
	        {
				if(data != null){
					const row = data.find(d => d.product_name == product_name);
					
					console.log(row);
					
